extends ../layout.pug
block content
    link(rel="stylesheet", href="/css/realty-list.css")
    div(class="d-flex mt-5  justify-content-between ") 
     h1 Resultats pour "#{city}"
     form(class="search") 
      input(type="text" class="w-75" placeholder="ville" ) 
      button ok
     if session && session.user
      a.btn.btn-primary.h-25(href="/realty/add/form") Ajouter un bien 


    if realties.length == 0
     h1.text-center.mt-5  Pas de résultats veuillez refaire une recherche
    
    if realties.length > 0 
         .row.mt-5
            .col-lg-8
                .panel.panel-container
                  each realtie in realties 
                   a(href=`/realty/${realtie.id}`)
 
                    .card.mt-2
                     each picture in pictures
                      if picture.realty_id == realtie.id 
                       if picture.Ordre == 1 
                        .d-flex
                         .Image
                          img( class="Image1" src=picture.url_path, alt=picture.url_path)                                  
                         .description    
                          h1(class="ms-5 mt-5 prix") #{realtie.price}$
                          .d-flex.ms-5
                            if realtie.type == 1
                             p Appartement-
                            if realtie.type == 2 
                             p Maison-
                            if realtie.type == 3 
                             p Studio-
                            if realtie.type == 4
                             p Autre -
                            p #{realtie.area}m²-
                                        
                            p.town #{realtie.town}- 
                            p #{realtie.zipcode}
                        
                          p.ms-5.mt-5.text-secondary #{realtie.created_date}
                          
            .col-lg-4.d-flex.flex-column.justify-content-center.align-items-center.position-sticky
             a(href="https://www.linkedin.com/in/demba-kante-68510714b/") 
              img(src="/assets/Linkendin.png", alt="linkedink", srcset="")     
             h2 KANTE DEMBA                
            include ../utils/paginateRealtyClient.pug     