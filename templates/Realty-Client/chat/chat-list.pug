    h2=m.id
 form(action=`/realty/${realty.id}/contact/${contact.lastname}` method="post" class="d-flex h-75 justify-content-center align-items-end")
  textarea(name="dialogue", cols="80", rows="5") 
  button.ms-5 envoyer   