extends ../../layout.pug

block content

 .d-flex.mt-5
  if userChat.civility === "M"
   img(src="/assets/avatar.png" alt="mdo" class="ms-2" width="100") 
  else 
   img(src="/assets/avatar-femme.png" alt="mdo" class="ms-2" width="100")
  h1.align-self-end #{userChat.lastname} - #{userChat.firstname}
 p.ms-5 Annonce : #{realty.room} pièces-#{realty.area} m²- #{realty.town}-#{realty.zipcode}

 each m in messages
